<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Plantillas" parent="Theme.MaterialComponents.DayNight.DarkActionBar"></style>

    <!-- Estilo de la Letra de pantalla de carga -->
    <style name="name_app_menu">
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Estilo de Letra de los Titulos Azules -->
    <style name="title_blue">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">#38386D</item>
    </style>

    <!-- Estilo de Letra de los Titulos -->
    <style name="title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Estilo de la Letra -->
    <style name="text">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Estilo de la Letra Gris -->
    <style name="text_gray">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#8B8B8B</item>
    </style>

    <!-- Estilo de la Letra Azul -->
    <style name="text_blue">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#38386D</item>
    </style>

    <!-- Estilo de la Letra Azul Small -->
    <style name="text_blue_small">
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#38386D</item>
    </style>

    <!-- Estilo de la Letra Amarillo Negritas -->
    <style name="text_yellow_bold">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <!-- Estilo de la Letra Verde Negritas -->
    <style name="text_green_bold">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_button_green</item>
    </style>

    <!-- Background de Boton Registrarse -->
    <style name="a_tag_button">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/background_color
        </item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Botones Adentro de la AplicaciÃ³n -->
    <style name="inside_button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Estilo para Centrar las Cosas -->
    <style name="center_things">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>


    <!-- Estilo para Centrar Small Margin -->
    <style name="center_things_small_margin">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- Estilo para EditText del codigo de password -->
    <style name="style_edit_text_code_password">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:maxLength">1</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <!-- Estilo para los video de recomendacion -->
    <style name="style_recomendations_videos">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily" tools:targetApi="o">@font/roboto_italic</item>
        <item name="android:gravity">top</item>
        <item name="android:textAppearance">@style/text_blue</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
    </style>


    <style name="style_switch" parent="">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">
            @color/background_color
        </item>
        <item name="android:colorForeground">@color/red</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#000000</item>
    </style>


</resources>