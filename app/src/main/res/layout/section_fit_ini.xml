<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_color">

    <TextView
        android:id="@+id/title_first_analysis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:lineSpacingExtra="10dp"
        android:text="@string/title_fit_ini"
        android:textAppearance="@style/title_blue"
        android:layout_marginTop="50dp"
        style="@style/center_things"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/text_first_analysis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:lineSpacingExtra="10dp"
        android:text="@string/text_primer_analisis_1"
        android:textAppearance="@style/text_blue"
        android:layout_marginTop="50dp"
        android:justificationMode="inter_word"
        style="@style/center_things"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_first_analysis"
        tools:ignore="MissingConstraints" />

    <include
        android:id="@+id/button_connect"
        layout="@layout/component_button_big"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_first_analysis" />


    <TextView
        android:id="@+id/text_second_analysis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:lineSpacingExtra="10dp"
        android:text="@string/text_primer_analisis_2"
        android:textAppearance="@style/text_blue"
        android:layout_marginTop="50dp"
        android:justificationMode="inter_word"
        style="@style/center_things"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_connect"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/arrow"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_arrow_forward"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>