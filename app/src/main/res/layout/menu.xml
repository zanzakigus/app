<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_color">

    <TextView
        android:id="@+id/title_buenos_dias"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:lineSpacingExtra="10dp"
        android:text="@string/title_buenos_dias"
        android:textAppearance="@style/title_blue"
        android:layout_marginTop="100dp"
        style="@style/center_things"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title_username"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:lineSpacingExtra="10dp"
        android:text="@string/title_username"
        android:textAppearance="@style/title_blue"
        android:layout_marginTop="0dp"
        style="@style/center_things"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_buenos_dias"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title_psicologia_positiva"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:lineSpacingExtra="10dp"
        android:text="@string/text_psicologia_positiva"
        android:textAppearance="@style/title"
        android:layout_marginTop="60dp"
        style="@style/center_things"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_username"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/figure_colors"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:background="@drawable/figure_colors"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_psicologia_positiva"
        tools:ignore="MissingConstraints" />

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>