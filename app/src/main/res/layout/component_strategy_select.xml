<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@color/invisible"
    android:minHeight="40dp">



    <View
        android:id="@+id/component_detection"
        style="@style/center_things"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/background_strategy_with_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/icon_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/strenghts"
        app:layout_constraintBottom_toTopOf="@id/text_strategy"
        app:layout_constraintEnd_toEndOf="@id/component_detection"
        app:layout_constraintStart_toStartOf="@id/component_detection"
        app:layout_constraintTop_toTopOf="@id/component_detection" />

    <TextView
        android:id="@+id/text_strategy"
        style="@style/center_things"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/text_strategy"
        android:textAppearance="@style/text_gray"
        app:layout_constraintBottom_toBottomOf="@id/component_detection"
        app:layout_constraintEnd_toEndOf="@id/component_detection"
        app:layout_constraintStart_toStartOf="@id/component_detection"
        app:layout_constraintTop_toBottomOf="@id/icon_image"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>